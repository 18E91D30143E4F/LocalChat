        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2PChat"
        mc:Ignorable="d"
        Title="HostsForm" Height="250" Width="400" Loaded="Window_Loaded">
    <Grid>
        <ListBox VerticalAlignment="Top" Name="lbHosts" Width="370" Height="170" Margin="0 5 0 0"></ListBox>
