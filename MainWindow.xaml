<Window x:Name="formMain" x:Class="P2PChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2PChat"
        mc:Ignorable="d"
        Title="Chat" Height="410" Width="700" Closing="formMain_Closing"  ResizeMode="NoResize" >
    <Grid>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="557,71,0,0" VerticalAlignment="Top" Width="120" Height="33" Click="btnSend_Click"/>
        <TextBox x:Name="txtbxMessage" HorizontalAlignment="Left" Height="56" Margin="557,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="lbChatWindow" HorizontalAlignment="Left" Height="350" Margin="10,10,0,0"  VerticalAlignment="Top" Width="535" ScrollViewer.VerticalScrollBarVisibility = "Auto"  ScrollViewer.CanContentScroll="True"/>
    </Grid>
</Window>
